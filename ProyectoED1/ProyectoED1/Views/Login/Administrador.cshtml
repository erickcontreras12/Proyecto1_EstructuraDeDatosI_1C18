    <br />
    <div id="json">
        @Html.ActionLink("Cargar Archivo Json de Contenido", "Carga", "Carga", new { area = "" }, new { @class = "navbar-brand2" })<img id="ima" src="@Url.Content("~/Imagenes/json.png")" width="100" height="100" />
